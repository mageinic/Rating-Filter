<?php if ($block->getFilterval() == $block->getStar()): ?>
<span style='background-color:#e8e8e8;'>
    <?php endif; ?>
    <div class="rating-summary" style="display: inline-block;margin-top: -5px;">
        <div class="rating-result" title="<?= $escaper->escapeHtmlAttr($block->getStar() * 20); ?>%">
            <span style="width:<?= $escaper->escapeHtmlAttr($block->getStar() * 20); ?>%"><span>
                    <?= $escaper->escapeHtml($block->getStar()); ?>
                </span>
            </span>
        </div>
    </div>
<?php if ($block->getStar() != 5): ?>
    <span style="font-size: smaller;">&amp; <?= $escaper->escapeHtml(__('up')); ?></span>
<?php endif; ?>
